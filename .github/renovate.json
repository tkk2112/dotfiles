{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>tkk2112/renovate"
    ],
    "hostRules": [
        {
            "matchHost": "github.com",
            "token": " ${{ secrets.RENOVATE_TOKEN }}"
        }
    ],
    "ansible": {
        "fileMatch": [
            "(^|/)defaults/[^/]+\\.ya?ml$",
            "(^|/)handlers/[^/]+\\.ya?ml$",
            "(^|/)tasks/[^/]+\\.ya?ml$"
        ]
    },
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "(^|/)defaults/[^/]+\\.ya?ml$",
                "(^|/)tasks/[^/]+\\.ya?ml$"
            ],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>[a-z-]+) depName=(?<depName>[^\\s]+)[^\\n]*\\n(?<variableName>[^:]+):\\s*[\"']?(?<currentValue>v?[0-9][^'\"\\s]*)(?:[\"'])?"
            ],
            "datasourceTemplate": "{{datasource}}",
            "depNameTemplate": "{{depName}}",
            "versioningTemplate": "semver"
        }
    ]
}
