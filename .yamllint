extends: default

rules:
  comments-indentation: false
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

  line-length:
    max: 160
    allow-non-breakable-words: true

  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

  comments:
    min-spaces-from-content: 1
